{
  "name": "simde",
  "version": "2.0.0",
  "description": "Educational Superescalar and VLIW simulator",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "scripts": {
    "info": "npm-scripts-info",
    "build": "trash build && tsc -p tsconfig.json && tsc -p config/tsconfig.module.json",
    "dist": "yarn webpack:prod",
    "lint": "tslint src/**/*.ts",
    "start": "yarn webpack:dev",
    "unit": "npm run build && nyc ava",
    "check-coverage": "nyc check-coverage --lines 70 --functions 70 --branches 70",
    "test": " npm run unit && npm run check-coverage",
    "watch": "trash build && multiview [npm watch:build] [npm watch:unit]",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:unit": "tsc -p tsconfig.json && ava --watch --verbose",
    "cov": "npm unit && npm html-coverage && opn coverage/index.html",
    "html-coverage": "nyc report --reporter=html",
    "send-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "docs": "typedoc src/index.ts --excludePrivate --mode file --theme minimal --out build/docs && opn build/docs/index.html",
    "docs:json": "typedoc --mode file --json build/docs/typedoc.json src/index.ts",
    "release": "standard-version",
    "webpack:dev": "webpack serve --config webpack/webpack.dev.js --mode developnent --port=9060",
    "webpack:prod": "webpack serve --config webpack/webpack.prod.js --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianabreu/SIMDE.git"
  },
  "author": "Adrian Abreu Gonzalez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adrianabreu/SIMDE/issues"
  },
  "homepage": "https://github.com/adrianabreu/SIMDE#readme",
  "dependencies": {
    "@types/i18next": "13.0.0",
    "@types/react": "17.0.8",
    "@types/react-dom": "17.0.5",
    "@types/react-i18next": "8.1.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bootstrap": "^5.0.1",
    "browser-sync": "^2.18.11",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^6.2.0",
    "font-awesome": "4.7.0",
    "i18next": "20.3.1",
    "i18next-browser-languagedetector": "6.1.1",
    "i18next-localstorage-cache": "1.1.1",
    "i18next-xhr-backend": "3.2.2",
    "lex": "1.7.9",
    "node-sass": "6.0.0",
    "react": "17.0.2",
    "react-bootstrap": "1.6.0",
    "react-color": "^2.14.0",
    "react-dom": "17.0.2",
    "react-file-reader-input": "2.0.0",
    "react-i18next": "11.10.0",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "sass-loader": "11.1.1",
    "source-map-loader": "3.0.0",
    "style-loader": "2.0.0",
    "tslib": "2.2.0",
    "webpack-merge": "5.7.3"
  },
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "@types/node": "15.6.1",
    "ava": "3.15.0",
    "codecov": "3.8.2",
    "coveralls": "3.1.0",
    "html-webpack-plugin": "5.3.1",
    "multiview": "3.0.1",
    "npm-scripts-info": "^0.3.6",
    "nyc": "15.1.0",
    "opn-cli": "5.0.0",
    "standard-version": "9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "trash-cli": "4.0.0",
    "tslint": "6.1.3",
    "tslint-config-standard": "9.0.0",
    "tslint-loader": "3.6.0",
    "typedoc": "^0.20.36",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "3.11.2"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "ava": {
    "files": [
      "build/main/**/*.spec.js"
    ],
    "source": [
      "build/main/**/*"
    ]
  }
}
