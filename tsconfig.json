{
   "extends": "./config/tsconfig.flexible",
   "compilerOptions": {
      "target": "es5",
      "outDir": "build/main",
      "rootDir": "src",
      "moduleResolution": "node",
      "module": "commonjs",
      "strictNullChecks": false,
      "declaration": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "listFiles": false,
      "traceResolution": false,
      "pretty": true,
      "jsx": "react",
      "downlevelIteration": true,
      "lib": [
         "es6",
         "dom"
      ],
      "types": [
         "node",
         "react",
         "react-dom"
      ]
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules/**"
   ],
   "compileOnSave": false
}